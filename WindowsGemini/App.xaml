<Application
    x:Class="WindowsGemini.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsGemini"
    xmlns:settings="using:WindowsGemini.Models.Settings"
    >
    <Application.Resources>
        <ResourceDictionary>
            <settings:AccentColorSettings x:Key="AccentColorSettings" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assets/ThemeColors/ThemeDictionaryLight.xaml" />
                <ResourceDictionary Source="/Assets/ThemeColors/ThemeDictionaryDark.xaml" />
                <ResourceDictionary Source="/Assets/Styles/RadioButtonAccentColorsStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
