    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsGemini.Assets.ThemeColors">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="MainBackgroundColor" Color="Transparent" />
            
            <SolidColorBrush x:Key="ButtonBackground" Color="#0078d7"/>
            <SolidColorBrush x:Key="ButtonForeground" Color="#f8f8f8"/>
            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#fefefe"/>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#003b6a"/>
            
            <SolidColorBrush x:Key="TxbHelloTextForeground" Color="#202020"/>
            <SolidColorBrush x:Key="TxbPressPlusForeground" Color="#979797"/>
            <SolidColorBrush x:Key="TxbAppNameForeground" Color="#0078d7"/>


            <SolidColorBrush x:Key="ButtonPlusMainForeground" Color="#202020"/>
            <SolidColorBrush x:Key="StackPanelOfFoldersToScanBackground" Color="White"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
